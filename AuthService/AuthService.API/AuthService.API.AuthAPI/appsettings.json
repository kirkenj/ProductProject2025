{
  "CreateUserSettings": {
    "DefaultRoleID": "2",
    "EmailConfirmationTimeoutHours": 1,
    "BodyMessageFormat": "Confirm registration by loggining in with email: '{0}', password '{1}'",
    "KeyForRegistrationCachingFormat": "UserRegistration {0}"
  },

  "UpdateUserEmailSettings": {
    "UpdateUserEmailCacheKeyFormat": "UpdateUserEmailCacheKey{0}",
    "UpdateUserEmailMessageBodyFormat": "Confirm email change with key '{0}'",
    "EmailUpdateTimeOutHours": 1
  },

  "ForgotPasswordSettings": {
    "EmailBodyFormat": "Your new password is '{0}'"
  },


  "HashProviderSettings": {
    "HashAlgorithmName": "MD5",
    "EncodingName": "utf-8"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "MemoryCacheOptions": {
    "TrackStatistics": "true"
  },

  "TokenTrackingSettings": {
    "DurationInMinutes": 60,
    "CacheSeed": "Token tracking "
  }
}
